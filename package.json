{
  "name": "js13kgames2022",
  "version": "1.1.0",
  "description": "skeleton rope physics game",
  "source": [
    "src/index.html",
    "src/index.js"
  ],
  "module": "dist/game.js",
  "targets": {
    "module": {
      "includeNodeModules": [
        "kontra"
      ],
      "optimize": true
    },
    "app": {
      "source": "src/index.html"
    }
  },
  "scripts": {
    "start": "parcel serve --no-cache --target=app",
    "build": "rm -rf dist && parcel build --no-cache --target=app --public-url ./",
    "build:lib": "rm -rf dist && parcel build --no-cache src/index.js --public-url ./",
    "zip": "cd dist && zip game.zip *.html *.js",
    "build:zip": "npm run build && cd dist && zip game.zip *.html *.js",
    "build:roadroller": "npm run build && roadroller dist/index.*.js -o dist/index.*.js && npm run zip",
    "roadroller": "roadroller dist/index.*.js -o dist/index.*.js",
    "release": "standard-version release"
  },
  "author": "johnedvard",
  "license": "ISC",
  "devDependencies": {
    "@parcel/optimizer-data-url": "^2.7.0",
    "@parcel/transformer-inline-string": "^2.7.0",
    "parcel": "^2.7.0",
    "parcel-reporter-static-files-copy": "^1.4.0",
    "roadroller": "^2.1.0",
    "standard-version": "^9.5.0"
  },
  "dependencies": {
    "kontra": "^8.0.0"
  }
}
